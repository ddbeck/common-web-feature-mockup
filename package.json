{
  "name": "@ddbeck/common-web-feature-mockup",
  "version": "0.1.0",
  "description": "This is a mock up of a way of defining web platform features based on support in different browsers. It has lots of missing pieces, including tools, an output format, and much more besides. This is meant to illustrate some ideas in a Google Doc; don't rely on it for anything at this point.",
  "scripts": {
    "test": "npx mocha test/**.js",
    "validate": "npx ajv-cli validate --spec=draft2019 -c ajv-formats -s ./schema/base.schema.json -d './web-platform-features/*.json'",
    "format": "npx prettier --check ."
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddbeck/common-web-feature-mockup.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ddbeck/common-web-feature-mockup/issues"
  },
  "homepage": "https://github.com/ddbeck/common-web-feature-mockup#readme",
  "devDependencies": {
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^2.1.1",
    "mocha": "^10.1.0",
    "prettier": "2.8.0"
  },
  "dependencies": {
    "@ddbeck/bcd-utils": "github:ddbeck/bcd-utils",
    "yargs": "^17.6.2"
  }
}
