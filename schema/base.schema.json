{
  "title": "Common Web Platform Feature Group",
  "description": "A feature or group of features of the web platform and related technologies",
  "type": "object",
  "properties": {
    "identifier": {
      "type": "string",
      "pattern": "^[a-z][a-z-]+[a-z]$"
    },
    "version": {
      "type": "string"
    },
    "shortName": {
      "type": "string"
    },
    "longName": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "constituentFeatures": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/query"
      }
    },
    "editorialMetadata": {
      "$ref": "#/$defs/editorialMetadata"
    }
  },
  "required": [
    "identifier",
    "shortName",
    "longName",
    "description",
    "constituentFeatures"
  ],
  "unevaluatedProperties": false,
  "$defs": {
    "query": {
      "title": "Feature support data query",
      "description": "A query for referencing up feature support data",
      "type": "object",
      "properties": {
        "source": {
          "oneOf": [
            {
              "title": "GitHub repository",
              "type": "string",
              "pattern": "([\\w-]+)\\/([\\w-]+)(#.*)?",
              "examples": ["ddbeck/common-web-feature-mockup"]
            },
            {
              "title": "Shorthands",
              "description": "A shorthand for known data sources",
              "enum": ["bcd"]
            }
          ]
        },
        "query": {
          "type": "string"
        },
        "ignoreMissing": {
          "type": "boolean"
        }
      },
      "unevaluatedProperties": false
    },
    "editorialMetadata": {
      "title": "Editorial Metadata",
      "description": "Metadata to support feature group workflows",
      "type": "object",
      "properties": {
        "status": {
          "enum": [
            "proposal",
            "active",
            "generated",
            "frozen",
            "pending-deletion"
          ]
        },
        "managers": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/manager" }
        },
        "created": { "$ref": "#/$defs/date" },
        "lastReviewed": { "$ref": "#/$defs/date" },
        "lastModified": { "$ref": "#/$defs/date" },
        "expires": { "$ref": "#/$defs/date" }
      },
      "unevaluatedProperties": false
    },
    "manager": {
      "oneOf": [
        {
          "title": "GitHub user name",
          "type": "string",
          "pattern": "@[\\w-]+",
          "examples": [
            "@ddbeck"
          ]
        },
        {
          "title": "Automation",
          "type": "string",
          "pattern": "\\[[\\w-]+\\]",
          "examples": [
            "[some-bot]"
          ]
        }
      ]
    },
    "date": {
      "type": "string",
      "format": "date"
    }
  }
}